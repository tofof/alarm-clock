#include <Arduino.h>
#include "secrets.h"

// 7-segment display
#include "TM1637TinyDisplay.h"
#define DIO 12
#define CLK 13
TM1637TinyDisplay display(CLK, DIO);


// Weight sensor
#define PRESSURE_PIN A0

void setup()
{
  Serial.begin(115200);
  while(!Serial) {}; // wait
  display.setBrightness(BRIGHT_7);
  pinMode(PRESSURE_PIN, INPUT);
}

void loop()
{
  Serial.println(analogRead(PRESSURE_PIN));
  display.showNumber(analogRead(PRESSURE_PIN));
  //display.showLevel((uint)(analogRead(PRESSURE_PIN)/10.24), false);
  
}